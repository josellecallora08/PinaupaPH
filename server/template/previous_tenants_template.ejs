<!DOCTYPE html>
<html>
<head>
  <title>Previous Tenants</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      width: 90%;
      max-width: 1200px;
      margin: auto;
      height: auto;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 0.5em;
      text-align: left;
      border: 1px solid #ddd;
    }
    th {
      background-color: #f4f4f4;
    }
    .signature {
      margin-top: 50px;
      text-align: left;
    }
  </style>
</head>
<body>
  <p style="text-align: end;">Date Generated: <%= generationDate %></p>
  <h3>Previous Tenants of Unit <%= unitNo %></h3>
  <table>
    <thead>
      <tr>
        <th>Tenant</th>
        <th>Move In Date</th>
        <th>Move Out Date</th>
        <th>Stay Duration (days)</th>
      </tr>
    </thead>
    <tbody>
      <% previousTenants.forEach(tenant => { %>
        <tr>
          <td><%= tenant.tenantName %></td>
          <td><%= new Date(tenant.moveIn).toLocaleDateString() %></td>
          <td><%= new Date(tenant.moveOut).toLocaleDateString() %></td>
          <td><%= tenant.stayDuration %></td>
        </tr>
      <% }) %>
      <tr>
        <td colspan="3">No. of Tenants</td>
        <td><%= totalTenants %></td>
      </tr>
    </tbody>
  </table>
  <div class="signature">
    <p>__________________________</p>
    <p>Owner's Signature</p>
  </div>
</body>
</html>
